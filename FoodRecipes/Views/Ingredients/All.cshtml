@model AllIngredientsQueryModel

@{
    ViewBag.Title = "All Ingredients";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Name"></label>
                <select asp-for="Name" class="form-control">
                    <option value="">@ViewBag.Title</option>

                    @foreach (var name in Model.Names)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Tomato, Potato, etc...">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Name</option>
                    <option value="1">Type</option>
                    <option value="2">Date Created</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group text-center col-md-12">
            <input type="submit" class="btn btn-primary" value="Search">
        </div>
    </div>
</form>

<div class="mb-2"></div>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalRecipes / AllIngredientsQueryModel.IngredientsPerPage);
}

<div class="row">
    <div class="col-md-6">
        <a class="btn @(Model.CurrentPage == 1 ? "btn-light disabled" : "btn-primary")"
           asp-controller="Recipes"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-name="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">Previous Page</a>
    </div>

    <div class="col-md-6">
        <a class="btn @(Model.CurrentPage < maxPage ? "btn-primary" : "btn-light disabled") float-right"
           asp-controller="Ingredients"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-name="@Model.Name"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">Next Page</a>
    </div>
</div>

<div class="mb-4"></div>

<div class="row">
    <div class="form-group text-center col-md-5">
    </div>
    <div class="form-group text-center col-md-2">
        <input type="submit" class="btn btn-primary disabled" value="@Model.CurrentPage">
    </div>
    <div class="form-group text-center col-md-5">
    </div>
</div>

<div class="mb-4"></div>

@if (!Model.Ingredients.Any())
{
    <h2 class="text-center">No Ingredients found!</h2>
}

<partial name="_IngredientsPartial" model="@Model.Ingredients" />

<div class="mb-0"></div>
